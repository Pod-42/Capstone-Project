<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/searchbarGreen">

    <ImageView
        android:id="@+id/backButton5"
        android:layout_width="74dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamDetailsTextView"
        android:layout_width="402dp"
        android:layout_height="26dp"
        android:layout_centerInParent="true"
        android:background="@color/green3"
        android:fontFamily="@font/new_pm_font"
        android:gravity="center"
        android:text="Team Details"
        android:textColor="@color/colorYellow"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stats_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/searchbarGreen"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/teamDetailsTextView"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>